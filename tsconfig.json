{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@styles/*": ["src/styles/*"],
        "@components/*": ["src/components/*"],
        "@pages/*": ["src/pages/*"],
        "@helpers/*": ["src/helpers/*"],
        "@types": ["src/@types/index.ts"],
        "@modules/*": ["src/modules/*"],
        "@hooks/*": ["src/hooks/*"]
      },
      "lib": [
        "es2020", "dom"
      ],
      "module": "commonjs",
      "target": "es2019",
      "types": [
        "node",
        "react",
        "next"
      ],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve"
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
}